<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="432.0" prefWidth="522.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectowheels.Controller.VistaBusqueda">
   <children>
      <VBox prefHeight="432.0" prefWidth="522.0">
         <children>
            <VBox prefHeight="167.0" prefWidth="522.0" spacing="10.0" style="-fx-background-color: f7e49b;">
               <children>
                  <Text fill="#e7623b" strokeType="OUTSIDE" strokeWidth="0.0" text="Busqueda de Viaje">
                     <font>
                        <Font name="System Bold" size="27.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="20.0" top="20.0" />
                     </VBox.margin>
                  </Text>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                     <children>
                        <TextField fx:id="txtSea" onKeyPressed="#enter" prefHeight="30.0" prefWidth="250.0" promptText="Buscar" style="-fx-background-color: e3c654; -fx-background-radius: 10;">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="30.0" />
                           </HBox.margin>
                        </TextField>
                        <ChoiceBox fx:id="myChoiceBox" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: e3c654; -fx-background-radius: 10;">
                           <HBox.margin>
                              <Insets left="30.0" />
                           </HBox.margin>
                        </ChoiceBox>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="210.0" prefWidth="418.0" spacing="5.0" style="-fx-background-color: ffffff;">
               <children>
                  <Text fill="#e7623b" stroke="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Resultados de busqueda" visible="false">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Text>
                  <ListView fx:id="myListView" onKeyPressed="#enter" prefHeight="200.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </ListView>
               </children></VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="70.0">
               <children>
                  <Button fx:id="btnReg" graphicTextGap="10.0" mnemonicParsing="false" onAction="#regresar" style="-fx-background-color: e7623b; -fx-background-radius: 10;" text="Regresar" textFill="WHITE" />
                  <Button fx:id="btnIr" graphicTextGap="10.0" mnemonicParsing="false" onAction="#irRide" style="-fx-background-color: e7623b; -fx-background-radius: 10;" text="Ir a Ride" textFill="WHITE" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
